<p style="color: green"><%= notice %></p>
<h1>Articles Listing Page</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Author</th>
      <th colspan=3>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= article.user.username if article.user %></td>
        <td> <%= link_to "Show", article_path(article.id) %> </td>
        <td> <%= link_to "Edit", edit_article_path(article.id) %> </td>
        <td> <%= link_to "Delete", article_path(article.id), method: :delete, data: {confirm: "Are you sure?"} %> <%= button_to "Destroy this teste", article, method: :delete %> </td>
        <td>  <%= button_to "Destroy this teste 2", article, method: :delete, data: {confirm: "Are you sure?"} %> </td>
      </tr>
    <% end %>
    <p>
      <%= link_to "New Article ", new_article_path %>
    </p>

    

  </tbody>
</table>

<form action="/articles/3" method = "delete">
      <input type="submit" value="Submit">
    </form>
