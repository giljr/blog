<p style="color: green"><%= notice %></p>
<h1>Articles Listing Page</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Author</th>
      <th colspan=3>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= article.user.username if article.user %></td>
        <td> <%= link_to "Show", article_path(article.id) %> </td>
        <td> <%= link_to "Edit", edit_article_path(article.id) %> </td>
        <td> <%= link_to "Delete", article, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger' %>  </td>

 


      </tr>
    <% end %>
    <p>
      <%= link_to "New Article ", new_article_path %>
    </p>

    

  </tbody>
</table>

<form action="/articles/3" method = "delete">
      <input type="submit" value="Submit">
    </form>
